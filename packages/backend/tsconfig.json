{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2021",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "paths": {
      "@nexus/shared": ["../shared/dist"]
    }
  },
  "include": ["src/**/*"]
}
